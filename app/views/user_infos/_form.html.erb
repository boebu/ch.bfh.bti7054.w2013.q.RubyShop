<%= form_for(@user_info) do |f| %>
    <% if @user_info.errors.any? %>
        <div id="error_explanation">
            <h2><%= t("errors.template.body")%></h2>

            <ul>
                <% @user_info.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="field large-12 columns">
            <%= f.label t('firstname') %><br>
            <%= f.text_field :firstName %>
        </div>
        <div class="field large-12 columns">
            <%= f.label t('lastname') %><br>
            <%= f.text_field :lastName %>
        </div>
        <div class="field large-12 columns">
            <%= f.label t('phone') %><br>
            <%= f.text_field :phone %>
        </div>
        <div class="field large-12 columns">
            <%= f.label t('street') %><br>
            <%= f.text_field :street %>
        </div>
        <div class="field large-4 columns">
            <%= f.label t('zip') %><br>
            <%= f.text_field :zip %>
        </div>
        <div class="field large-8 columns">
            <%= f.label t('place') %><br>
            <%= f.text_field :place %>
        </div>
        <div class="actions large-12 columns">
            <%= f.submit t('save_changes'), class: 'button' %>
        </div>
    </div>
<% end %>