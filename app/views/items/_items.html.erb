<ul class="small-block-grid-3">
    <% @items.each do |item| %>
        <% itemTranslation = item.translations.find_by_language_id(session[:language_id]) %>
        <li>
            <div class="item">
                <div class="row">
                    <div class="large-12 columns">
                        <%= image_tag item.imgSrc.url(:medium), alt: itemTranslation.title %>
                    </div>
                </div>
                <div class="row">
                    <div class="large-12 columns">
                        <h5><%= itemTranslation.title %></h5>
                    </div>
                </div>
                <div class="row">
                    <div class="large-12 columns">
                        <p><%= itemTranslation.description %></p>
                    </div>
                </div>
                <div class="row">
                    <div class="large-8 columns">
                        $<%= item.price %>
                    </div>
                    <div class="large-4 columns">
                        <%= link_add_to_cart(item.id) %>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
</ul>